<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/controller"
        android:background="#07000000"
        android:text="bla bla bla" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/controller"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#07000000"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/next_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:background="#07000000"
            android:scaleType="fitXY"
            android:src="@drawable/right_arrow"
             />

        <ImageButton
            android:id="@+id/prev_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:background="#07000000"
            android:scaleType="fitXY"
            android:src="@drawable/left_arrow"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_current"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/time_current"
                android:gravity="center"
                android:text="Time Remaining"
                android:textColor="#fff"
                android:textSize="13dp" />

            <ImageButton
                android:id="@+id/rew"

                style="@android:style/MediaButton.Rew"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/time_current"
                android:layout_toRightOf="@+id/time_current"
                android:contentDescription="@string/description" />

            <ImageButton
                android:id="@+id/pause"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_toRightOf="@id/rew"
                android:background="#07000000"
                android:contentDescription="@string/description"
                android:scaleType="fitXY" />


            <ImageButton
                android:id="@+id/ffwd"
                style="@android:style/MediaButton.Ffwd"

                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/pause"
                android:layout_toRightOf="@+id/pause"
                android:contentDescription="@string/description" />

            <TextView
                android:id="@+id/time"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/ffwd"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="20dp"
                android:layout_below="@+id/time"
                android:layout_toRightOf="@+id/ffwd"
                android:gravity="center"
                android:text="Total Time elapsed"
                android:textColor="#fff"
                android:textSize="13dp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/mediacontroller_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dip"
                android:layout_height="32dip"
                android:layout_weight="1" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
